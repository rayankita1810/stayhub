<% layout("layouts/boilerplate") %>
<script>
    const maptoken = "<%=process.env.MAP_TOKEN%>";
    const listing = JSON.parse('<%- JSON.stringify(listing) %>')
</script>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h1><%= listing.title %></h1>
  </div>
  <div class="card listing-card col-6 offset-3 show-card">
     <img
      src="<%= listing.image.url %>"
      alt="Listing_image"
      class="card-img-top show-img"
    />
    <div class="card-body">
      <div class="card-text">
        <p>Owned by <i> <%= listing.owner ? listing.owner.username : "Anonymous" %> </i></p>

        <p><%= listing.description %></p>

        <p>&#8377;<%= listing.price.toLocaleString("en-IN")%></p>

        <p><%= listing.country %></p>

        <p><%= listing.location %></p>
      </div>
      <% if( currUser && listing.owner && listing.owner._id.equals(currUser._id)){ %>
      <div class="btns">
        <a href="/<%=listing._id%>/edit" class="btn btn-dark edit-btn"
          >Edit</a
        >

        <form method="post" action="/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>

      <% } %>
    </div>
    <hr />
    <div>
      <% if(currUser){ %>
      <form
        method="post"
        action="/<%=listing._id%>/reviews"
        novalidate
        class="needs-validation"
      >
        <h3>Leave a review</h3>
        <div>
          <fieldset class="starability-slot mb-3">
            <legend class="form-label">Rating:</legend>
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
              checked
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <label class="form-label" for="comment">Comment</label>
        <textarea
          required
          class="form-control"
          placeholder="Write your experiences here..."
          rows="5"
          cols="30"
          id="comment"
          name="review[comment]"
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
        <button type="submit" class="btn btn-outline-dark mt-3">Submit</button>
      </form>
      <hr />
      <%}%> <% if(listing.reviews.length>0){ %>
      <div class="row">
        <h3><b>All Reviews</b></h3>
        <%for(review of listing.reviews){%>
        <div class="card col-5 ms-3 mb-3 p-3">
          <h5 class="card-title"><%=review.author.username%></h5>

          <p
            class="starability-result card-text"
            data-rating="<%=review.rating%>"
          ></p>
          <p class="card-text"><%=review.comment%></p>
          <form
            method="post"
            action="/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <%}%>
      </div>
      <%}%>
    </div>
  </div>
  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
</div>
<script src="/js/map.js"></script>
