<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <h1 class="col-6 offset-3 mb-3">Signup for Stauhub</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="username" class="form-label">Username:</label>
          <input
            name="username"
            id="username"
            class="form-control"
            placeholder="Enter your username here..."
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Username looks good!</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input
            name="email"
            id="email"
            class="form-control"
            placeholder="Enter your email here..."
            type="email"
            class="form-control"
            required
          />
          
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            name="password"
            id="password"
            class="form-control"
            placeholder="Enter your password here..."
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Password looks good!</div>
        </div>
        <button class="btn btn-success" type="submit">Save</button>

    </form>
  </div>
</div>
